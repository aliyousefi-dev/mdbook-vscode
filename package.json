{
  "name": "mdbook-vscode",
  "displayName": "mdbook-vscode",
  "description": "mdbook helper plugin",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mdbook-viewContainer",
          "title": "Mdbook",
          "icon": "resources/logo.svg"
        }
      ]
    },
    "views": {
      "mdbook-viewContainer": [
        {
          "id": "summeryExplorer",
          "name": "Summery Explorer"
        },
        {
          "id": "mdbookAssets",
          "name": "Assets"
        },
        {
          "id": "mdbookConfig",
          "name": "Config"
        }
      ]
    },
    "commands": [
      {
        "command": "mdBookExplorer.openFile",
        "title": "Open File"
      },
      {
        "command": "mdBookPreview.open",
        "title": "Open MdBook Preview"
      },
      {
        "command": "mdBookExplorer.refreshEntry",
        "title": "Refresh",
        "icon": "$(extensions-refresh)"
      },
      {
        "command": "mdBookExplorer.createfile",
        "title": "Create File",
        "icon": "$(search-new-editor)"
      },
      {
        "command": "summeryExplorer.rename",
        "title": "Rename"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "mdBookExplorer.createfile",
          "when": "view == summeryExplorer",
          "group": "navigation"
        },
        {
          "command": "mdBookExplorer.refreshEntry",
          "when": "view == summeryExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "summeryExplorer.rename",
          "when": "viewItem == renameable",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
